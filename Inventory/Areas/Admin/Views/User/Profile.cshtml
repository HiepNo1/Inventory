@model Model.EF.User

@{
    ViewBag.Title = "Thông tin cá nhân";
    Layout = "~/Areas/Admin/Views/Shared/_Layouts.cshtml";
}

@section header{
    Thông tin cá nhân
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-lg-6">
                       
                    </div>
                    <div class="col-lg-6 text-right">
                        <a href="~/Admin/Home" class="btn btn-info"><i class="fa fa-backward"></i> Quay lại</a>
                    </div>
                </div>
            </div>

            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6">
                        <div class="form-control">
                            <label>Tài khoản</label>
                            <input type="text" value="@Model.UserName" />
                        </div>
                        <div class="form-control">
                            <label>Tên đầy đủ</label>
                            <input type="text" value="@Model.Name" />
                        </div>
                        <div class="form-control">
                            <label>SĐT</label>
                            <input type="text" value="@Model.Phone" />
                        </div>                 
                    </div>
                </div>
               
                <!-- /.table-responsive -->
            </div>
        </div>
    </div>
</div>            