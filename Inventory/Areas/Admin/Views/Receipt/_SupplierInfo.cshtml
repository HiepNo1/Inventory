@model Model.EF.Supplier
@using Inventory.Common;
@Html.Partial("MessagePartial")
@if (Model != null)
{

    <input type="hidden" id="supplierId" value="@Model.ID" />
    <input type="hidden" id="supplierName" value="@Model.Name" />
    <input type="hidden" id="supplierEmail" value="@Model.Email" />
    <input type="hidden" id="supplierPhone" value="@Model.Phone" />
    <input type="hidden" id="supplierAddress" value="@Model.Address" />
    <b>Thông Tin Nhà Cung Cấp</b>
    <h5><b>Tên nhà cung cấp : </b> @Model.Name</h5>
    <h5><b>Email : </b> @Model.Email</h5>

    <h5><b>Số điện thoại : </b> @CommonConstants.FormatPhoneNum(Model.Phone)</h5>

    <h5><b>Địa chỉ : </b> @Model.Address</h5>
}

