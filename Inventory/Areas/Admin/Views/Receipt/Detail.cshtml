@model Model.ViewModels.ReceiptViewModel

@{
    ViewBag.Title = "Chi tiết đơn nhập";
    Layout = "~/Areas/Admin/Views/Shared/_Layouts.cshtml";
}


@section header{
    Chi tiết đơn nhập
}
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="col-lg-6">

                        </div>
                        <div class="col-lg-6 text-right">
                            <a href="@Url.Action("Index", "Receipt")" class="btn btn-info"><i class="fa fa-backward"></i> Quay lại</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="col-lg-5">
                            <h4>Đơn hàng</h4>
                            <table class="table table-hover">
                                <tr>
                                    <td>Số phiếu nhập</td>
                                    <td>@Model.Code</td>
                                </tr>
                                <tr>
                                    <td>Ngày tạo</td>
                                    <td>@Model.CreateDate</td>
                                </tr>
                                <tr>
                                    <td>Hình thức thanh toán</td>
                                    <td>@Model.Payment</td>
                                </tr>
                                <tr>
                                    <td>Trạng thái</td>
                                    <td>@Model.Status</td>
                                </tr>
                            </table>
                        </div>
                        <div class="col-lg-7">
                            <h4>Thông tin nhà cung cấp</h4>
                            <table class="table table-striped table-hover">
                                <tr>
                                    <td>Tên nhà cung cấp</td>
                                    <td>@Model.SupplierName</td>
                                </tr>
                                <tr>
                                    <td>SĐT</td>
                                    <td>@Model.SupplierPhone</td>
                                </tr>
                                <tr>
                                    <td>Email</td>
                                    <td>@Model.SupplierEmail</td>
                                </tr>
                                <tr>
                                    <td>Địa chỉ nhận</td>
                                    <td>@Model.SupplierAddress</td>
                                </tr>
                                
                            </table>
                        </div>
                    </div>

                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <h4>Chi tiết đơn nhập</h4>
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>Tên sản phẩm</th>
                                        <th>Ảnh sản phẩm</th>
                                        <th>Giá nhập</th>                                     
                                        <th>Số lượng nhập</th>
                                        <th>Thành tiền</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{ decimal totalMoney = 0;}
                                    @foreach (var detail in ViewBag.lstReceiptDetail)
                                    {
                                        decimal total = detail.ImportPrice * detail.Quantity;
                                        <tr>
                                            <td>@detail.ProductName</td>
                                            <td><img src="@detail.ProductImage" style="width:100px; height:100px" /> </td>
                                            <td>@detail.ImportPrice.ToString("#,##0 đ")</td>                        
                                            <td>@detail.Quantity</td>
                                            <td>@total.ToString("#,##0 đ")</td>
                                        </tr>
                                        totalMoney += total;
                                    }
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th colspan="4">
                                            
                                        </th>
                                        <th colspan="2">Tổng tiền : @totalMoney.ToString("#,##0 đ")</th>
                                    </tr>
                                </tfoot>
                            </table>

                        </div>
                        <!-- /.table-responsive -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

