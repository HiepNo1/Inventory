@model PagedList.IPagedList<Model.EF.UserGroup>
@using PagedList.Mvc;
@using Inventory.Common;
@{
    ViewBag.Title = "Quản lý nhóm người dùng";
    Layout = "~/Areas/Admin/Views/Shared/_Layouts.cshtml";
    var credentials = Session[CommonConstants.SESSION_CREDENTIALS] as List<string>;
}

@section header{
    Quản lý nhóm người dùng
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">   
            <div class="panel-heading">
                <div class="row">
                    <div class="col-lg-6">                       
                    </div>
                    <div class="col-lg-6 text-right">
                        <a href="~/Admin/UserGroup/Create" class="btn btn-success"><i class="bi bi-plus"></i> Thêm mới</a>
                    </div>
                </div>
            </div>          

            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Mã nhóm</th>
                                <th>Tên nhóm</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.ID</td>
                                    <td>@item.Name</td>
                                    <td>
                                        <a href="~/Admin/UserGroup/Edit/@item.ID" class="btn btn-primary"> <i class="bi bi-pencil"></i></a>
                                        <a href="~/Admin/UserGroup/Delete/@item.ID" class="btn btn-danger" onclick="return confirm('Bạn có muốn xóa thông tin khách hàng này ?');"><i class="bi bi-trash"></i></a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                    @Html.PagedListPager(Model, page => Url.Action("Index"))
                </div>
                <!-- /.table-responsive -->
            </div>
        </div>
    </div>
</div>            