@model Model.ViewModels.ProductViewModel

@{
    ViewBag.Title = "Chi tiết sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_Layouts.cshtml";
}

@section header{
    Chi tiết sản phẩm
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-lg-6">
                        <b>Mã sản phẩm</b> : @Html.DisplayFor(model => model.Code)
                    </div>
                    <div class="col-lg-6 text-right">
                        <a href="@Url.Action("Index", "Product")" class="btn btn-info"><i class="fa fa-backward"></i> Quay lại</a>
                    </div>
                </div>

            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-12">
                        <hr />
                        <div class="row">
                            <div class="col-lg-7">
                                <table class="table table-hover">
                                    <tr>
                                        <td>
                                            <b>Tên sản phẩm</b>
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => model.Name)
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <b>Hình ảnh</b>
                                        </td>
                                        <td>
                                            <img src="@Model.Image" style="width:200px; height:200px" />
                                        </td>
                                    </tr>

                                </table>

                            </div>
                            <div class="col-lg-5">
                                <table class="table table-hover">
                                    <tr>
                                        <td>
                                            <b>Loại sản phẩm</b>
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => model.CateName)
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <b>Chất liệu</b>
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => model.Material)
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <b>Màu sắc</b>
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => model.Color)
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <b>Giá tiền</b>
                                        </td>
                                        <td>
                                            @{
                                                decimal? price = Model.Price;
                                                string format = price?.ToString("#,##0 đ");
                                            }
                                            <p>@format</p>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <b>Số lượng</b>
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => model.Quantity)
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <b>Giảm giá</b>
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => model.Sale) %
                                        </td>
                                    </tr>

                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <div class="row">
                            <div class="col-lg-7">
                                <table class="table table-hover">
                                    <tr>
                                        <td style="width : 34%">
                                            <b>Chi tiết sản phẩm</b>
                                        </td>
                                        <td>
                                            @{
                                                if (Model.Detail == null)
                                                {
                                                    <span>Chưa có chi tiết</span>
                                                }
                                                else
                                                {
                                                    <span>@Model.Detail</span>
                                                }
                                            }
                                        </td>
                                    </tr>
                                </table>
                            </div>
                            <div class="col-lg-5">
                                <table class="table table-hover">
                                    <tr>
                                        <td style="width : 43%">
                                            <b>Mô tả sản phẩm</b>
                                        </td>
                                        <td>
                                            @{
                                                if (Model.Description == null)
                                                {
                                                    <span>Chưa có mô tả</span>
                                                }
                                                else
                                                {
                                                    <span>@Model.Description</span>
                                                }
                                            }
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


</div>

